{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "modules.d.ts"],
  "exclude": ["node_modules"]
}
